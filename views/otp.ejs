<body>
<div class="container-fluid  bg-light">
        <div>
            <div class="row">
                <div class="col-md-8"><br><br>
                    <h1>OTP</h1>
                
                    <form method="POST" action="/verifyOtp" onsubmit="return false">
                        <input type="hidden" name="Email" value="<%= Email %>">

                        <div class="bg-gray">
                            <p>Enter OTP</p>
                            <div class="form-group mb-3">
                                <input id="otp" class="form-control" name="otp" type="text" placeholder="Enter Received OTP">
                            </div>
                        </div>
                        <div class="form-group text-center" >
                            <input class="btn btn-primary" type="submit" value="Verify OTP" />
                        </div>

                        <div class="row">
                            <div class="col-12 text-center pass">
                                <p> <a href="/" class="text-muted ml-1">Back to Login?</a></p>
                            </div>
                        </div>
                    </form>    
                </div>
                </div>
            </div>
        </div>
    </body>
</html>