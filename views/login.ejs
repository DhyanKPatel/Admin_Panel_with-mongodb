    <div class="node">
      <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8"><br><br>

          <h1>LOGIN</h1>
          <br>
                            <% if (typeof error !== 'undefined' && error.length > 0) { %>
                            <div class="container">
                                <div class="alert alert-warning" style="text-align: center;">
                                    <%= error %> &nbsp; &nbsp; &nbsp;<a href="/" style="color:#8a6d3b;">&#10006;</a></div>
                            </div>
                            <% } %>
          <form action="/loginUser" method="post">
            <div class="row">
              <div class="col-sm-12 col-lg-12 col-md-12">
                <div class="form-group">
                  <label for="Email">Email:</label>
                  <input type="Email" id="Email" class="form-control" name="Email" placeholder="Enter your email">
                      
                  <% if (typeof error1 !== 'undefined' && error1.length > 0) { %>
                    <div style="color: red;">
                        <%= error1 %>
                    </div>
                    <% } %>


                </div>
              </div>
            </div><br>
            <div class="row">
              <div class="col-sm-12 col-lg-12 col-md-12">
                <div class="form-group">
                  <label for="Password">Password:</label>
                  <input type="Password" class="form-control" name="Password" id="Password" placeholder="Enter Password" />
                  <% if (typeof error2 !== 'undefined' && error2.length > 0) { %>
                    <div style="color: red;">
                        <%= error2 %>
                    </div>
                    <% } %>
                   
                 
                </div>
              </div>
            </div><br>
            <div class="row">
              <div><input class="btn btn-primary" type="submit" value="Submit"></div><br>
              <div><a href="verifyemail">Forget Password?</a></div>
            </div><br>
            <br>
            <p><strong> NEED AN ACCOUNT ? </strong> <a href="/registration"><b>Sign
                  up</b></a>
          </form>
        </div>
        <div class="col-md-2">
        </div>
      </div>
    </div>
  


